{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "out",
    // we need to include dom library for msw to work, see https://github.com/mswjs/msw/issues/408
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["src/webview"],
  "include": ["src/**/*", "test/**/*"]
}
