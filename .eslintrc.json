{
  "extends": ["airbnb-base", "prettier" ],
  "plugins": ["import", "prettier"],
  "env": {
    "mocha": true,
    "jest": true
  },
  "ignorePatterns": [
    "node_modules/",
    "src/webview/node_modules/",
    "src/webview/dist/",
    ".vscode-test/",
    "out"
  ],
  "rules": {
    "no-console": "off",
    "no-underscore-dangle": "off",
    "no-return-await": "off",
    "import/no-unresolved": [
      2,
      {
        "ignore": ["vscode", "vue", "v-tooltip"]
      }
    ],
    "prettier/prettier": ["error"]
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "extends": [
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint"
      ],
      "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
      },
      "rules": {
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "ts": "never",
            "tsx": "never"
          }
        ]
      },
      "parser": "@typescript-eslint/parser",
      "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".ts"]
          }
        }
      },
      "plugins": [
        "@typescript-eslint",
        "prettier"
      ]
    }
  ]
}
